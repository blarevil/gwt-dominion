<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.jeeex.cardgame.client.ui"
	xmlns:wgt="urn:import:com.jeeex.cardgame.client.ui.widget">
	<ui:style>
		.gamepanel {
			height: 500px;
			width: 900px;
		}
		
		.debug {
			width: 100%;
			height: 100%;
			background-color: green;
		}
		
		.red {
			background-color: red;
		}
		
		.green {
			background-color: #88FF88;
		}
		
		.button {
			width: 100px;
		}
	</ui:style>
	<ui:with field='res' type='com.jeeex.cardgame.client.res.DefaultResource' />
	<g:DockLayoutPanel unit="PX" addStyleNames="{style.gamepanel}">
		<g:north size="33">
			<g:HTMLPanel addStyleNames="{style.red}">
				<table>
					<tr>
						<td>
							<g:Button addStyleNames="{style.button}" ui:field="createGameBtn">Create
								game</g:Button>
						</td>
						<td>
							<g:Button addStyleNames="{style.button}" ui:field="refreshBtn">Refresh
								game</g:Button>
						</td>
						<td>
							<g:Button addStyleNames="{style.button}">Preferences</g:Button>
						</td>
						<td>
							<g:Button addStyleNames="{style.button}" ui:field="loginBtn">Login</g:Button>
						</td>
						<td>
							<g:Button addStyleNames="{style.button}" ui:field="logoutBtn">Logout</g:Button>
						</td>
						<td>
							<g:Button addStyleNames="{style.button}" ui:field="createUserBtn">Create
								User</g:Button>
						</td>
						<td>
							<g:Label>AuthToken:</g:Label>
						</td>
						<td>
							<g:Label ui:field="debugAuthTokenLbl"></g:Label>
						</td>
					</tr>
				</table>
			</g:HTMLPanel>
		</g:north>
		<g:west size="200">
			<g:FlowPanel addStyleNames="{style.green}">
				<g:Label>Lobby</g:Label>
				<wgt:GameListWidget ui:field="gameList" />
			</g:FlowPanel>
		</g:west>
		<g:east size="200">
			<c:ChatView addStyleNames="{style.green}"/>
		</g:east>
		<g:center>
			<g:HTMLPanel>
				<p>Welcome to Dominion card game!</p>
			</g:HTMLPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>
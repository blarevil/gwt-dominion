<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.gamepanel {
			height: 500px;
			width: 900px;
		}
	</ui:style>
	<ui:with field='res' type='com.jeeex.cardgame.client.res.DefaultResource' />
	<g:DockLayoutPanel unit="PX" addStyleNames="{style.gamepanel}">
		<g:north size="33">
			<g:HTMLPanel>
				<table>
					<tr>
						<td>
							<g:Button>Create game</g:Button>
						</td>
						<td>
							<g:Button>Refresh game</g:Button>
						</td>
						<td>
							<g:Button>Preferences</g:Button>
						</td>
						<td>
							<g:Button>Login</g:Button>
						</td>
						<td>
							<g:Button>Logout</g:Button>
						</td>
					</tr>
				</table>
			</g:HTMLPanel>
		</g:north>
		<g:west size="100">
			<g:FlowPanel ui:field="gamelist">
				<g:Label>Lobby</g:Label>
			</g:FlowPanel>
		</g:west>
		<g:center>
			<g:HTMLPanel>
				<p>Welcome to Dominion card game!</p>
			</g:HTMLPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>
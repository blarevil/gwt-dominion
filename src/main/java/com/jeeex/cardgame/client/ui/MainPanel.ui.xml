<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.max_height {
			height: 100%;
		}
		
		.gamepanel {
			height: 500px;
			width: 800px;
		}
		
		.chathistory,.chatbox {
			width: 190px;
			margin: 5px;
		}
		
		.chatbox {
			height: 50px;
		}
		
		.chathistory {
			height: 430px;
			font-size: 10px;
		}
		
		.debug {
			width: 100%;
			height: 100%;
			background-color: B87CCC;
			border-style: solid;
			border-width: 1px;
		}
	</ui:style>
	<g:DockLayoutPanel unit="PX" addStyleNames="{style.gamepanel}">
		<g:east size="200">
			<g:DockLayoutPanel unit="PX">
				<g:south size="60">
					<g:TextArea addStyleNames="{style.chatbox}"></g:TextArea>
				</g:south>
				<g:center>
					<g:TextArea addStyleNames="{style.chathistory}"></g:TextArea>
				</g:center>
			</g:DockLayoutPanel>
		</g:east>
		<g:center>
			<g:DockLayoutPanel unit="PX" addStyleNames="{style.max_height}">
				<g:north size="220">
					<g:AbsolutePanel addStyleNames="{style.debug}">
					</g:AbsolutePanel>
				</g:north>
				<g:north size="220">
					<g:Label addStyleNames="{style.debug}">Game Panel here.</g:Label>
				</g:north>
				<g:north size="60">
					<g:Composite ui:field="handPnl"></g:Composite>
				</g:north>
			</g:DockLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 